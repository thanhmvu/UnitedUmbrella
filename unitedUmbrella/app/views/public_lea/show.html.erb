<section class="wrapper style5">
	<div class="inner">
		<% unless @invalid_auns.empty? %>
		<%= show_error_message("The following AUNs do not exist:\n" + @invalid_auns.join("\n")) %>
		<% else %>
		<p>
			<div id="graph"></div>
			<table>
				<tr>
					<th>aun</th>
					<th>lea_name</th>
					<th>lea_type</th>
					<th>county</th>
				</tr>
				<tr>
					<td><%= @lea.aun  %></td>
					<td><%= @lea.lea_name %><br></td>
					<td><%= @lea.lea_type %><br></td>
					<td><%= @lea.county %><br></td>
				</tr>
			</table>
		</p>
		<% end %>
	</div>
</section>

<script>
    var dataset = [
	{label: 'Below Basic',count: <%= @lea.pct_below_basic%> }
	{label: 'Basic',count: <%= @lea.pct_basic%> }
	{label: 'Proficient',count: <%= @lea.pct_proficient %> }
	{label: 'Advanced',count: <%= @lea.pct.advanced %> }
	]

    var width = 360;
    var height = 360;
    var radius = Math.min(width, height) / 2;
    var color = d3.scaleOrdinal(d3.schemeCategory20b);
    var svg = d3.select('#graph')
      .append('svg')
      .attr('width', width)
      .attr('height', height)
      .append('g')
      .attr('transform', 'translate(' + (width / 2) +
        ',' + (height / 2) + ')');
    var arc = d3.arc()
      .innerRadius(0)
      .outerRadius(radius);
    var pie = d3.pie()
      .value(function(d) { return d.count; })
      .sort(null);
    var path = svg.selectAll('path')
      .data(pie(dataset))
      .enter()
      .append('path')
      .attr('d', arc)
      .attr('fill', function(d) {
        return color(d.data.label);
      });
</script>
